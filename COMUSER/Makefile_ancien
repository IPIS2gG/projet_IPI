all : comuser test

comuser : interface_graphique.o comuser.o
	gcc -Wall -o comuser interface_graphique.o comuser.o -lSDLmain -lSDL -lSDL_ttf `pkg-config --libs gtk+-2.0`

comuser.o : comuser.c interface_graphique.h
	gcc -c -Wall `pkg-config --cflags gtk+-2.0` comuser.c

interface_graphique.o : interface_graphique.c
	gcc -pthread -Wall -c interface_graphique.c


test: interface_graphique.o test.o
	gcc -Wall -o test interface_graphique.o test.o -lSDLmain -lSDL -lSDL_ttf

test.o: test.c interface_graphique.h
	gcc -c -Wall test.c


clean :
	rm *.o
